<%= form_with model: post_hobby, local: true do |f| %>
  <div class="form-group">
    <%= f.label :タイトル %>
    <%= f.text_field :title %>
  </div>
  <div class="form-group">
    <%= f.label :文章 %>
    <%= f.text_area :text %>
  </div>
  <div class="form-group">
    <%= f.label :画像 %>
    <%= f.file_field :image, accept: 'image/*' %>
  </div>
  <div class="form-group">
    <%= f.label :タグ %>
    <%= f.text_field :name, value: tag_list %>
  </div>
  <div class="form-group">
    <%= f.submit '投稿する', name: 'commit' ,class: "btn btn-success"%>
    <% if post_hobby.new_record? || isDraft %>
      <%= f.submit '下書き保存', name: 'commit',class: "btn btn-primary" %>
    <% end %>
  </div>
<% end %>
